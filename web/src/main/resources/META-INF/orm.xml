<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">
    <description>Pablito XML JPA mappings</description>
    <package>org.dna.model</package>
    <entity class="org.dna.model.Tasker" name="Tasker" access="FIELD">
        <table name="TASKERS"/>
        <attributes>
            <id name="id">
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="name"/>
            <basic name="mainSkill"/>
            <embedded name="pendingOffers"/>
            <embedded name="skills"/>
        </attributes>
    </entity>

    <embeddable class="org.dna.model.TaskOffer">
        <attributes>
            <basic name="taskRequesterId"/>
            <basic name="skill"/>
        </attributes>
    </embeddable>
</entity-mappings>